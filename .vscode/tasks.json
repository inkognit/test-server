{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Orders",
      "dependsOrder": "sequence",
      "dependsOn": ["Start Docker Mongo", "Sleep for 10 seconds"]
    },
    {
      "label": "Start Docker Mongo",
      "type": "shell",
      "command": "docker run -d -p 27017:27017 --name MongoDB -e MONGO_INITDB_ROOT_USERNAME=admin -e MONGO_INITDB_ROOT_PASSWORD=123321qwerty mongo:latest"
    },
    {
      "label": "Sleep for 5 seconds",
      "type": "shell",
      "command": "ping -c 5 127.0.0.1"
      // "command": "ping 127.0.0.1 -n 5" // windows
    },
    {
      "label": "Remove Docker Mongo",
      "type": "shell",
      "command": "docker rm -f MongoDB"
    }
  ]
}
